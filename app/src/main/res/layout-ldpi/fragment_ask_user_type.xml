<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/askusertypestatusbar"
    tools:context=".AskUserTypeFrag">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="212dp"
        android:layout_height="153dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/askFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      />

    <RelativeLayout
        android:id="@+id/askFrame"
        android:layout_width="292dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ask_login_type_box_shape"
        android:elevation="5dp"
        android:stateListAnimator="@null"
        android:translationZ="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
       >

        <Button
            android:id="@+id/normalSignup"
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="161dp"
            android:layout_marginRight="161dp"
            android:background="@drawable/btn_get_started"
            android:fontFamily="sans-serif"
            android:text="Sign Up"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <Button
            android:id="@+id/trainerSignup"
            android:layout_width="131dp"
            android:layout_height="39dp"
            android:layout_below="@+id/normalSignup"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="161dp"
            android:layout_marginRight="161dp"
            android:background="@drawable/btn_get_started"
            android:elevation="10dp"
            android:fontFamily="sans-serif"
            android:text="Trainer"
            android:textColor="@color/White"
            android:textStyle="bold" />

        <Button
            android:id="@+id/LogInBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/trainerSignup"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="187dp"
            android:layout_marginLeft="187dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/btn_get_started"
            android:elevation="10dp"
            android:fontFamily="sans-serif"
            android:text="Log In"
            android:textColor="@color/White"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>