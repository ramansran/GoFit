<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backsahpefor_singledayexercise"
    android:padding="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline97"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/singledayexercise_imageview"
            android:layout_width="@dimen/_60sdp"
            android:scaleType="fitXY"
            android:layout_height="@dimen/_60sdp"></ImageView>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline97"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline99"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.00" />

    <!--<TextView
        android:id="@+id/EName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Exercise name"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/fill1"
        app:layout_constraintEnd_toStartOf="@+id/guideline98"
        app:layout_constraintStart_toStartOf="@+id/guideline97"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/EAmountFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/fill1"
        app:layout_constraintTop_toBottomOf="@id/EName"
        app:layout_constraintEnd_toStartOf="@+id/guideline98"
        app:layout_constraintStart_toStartOf="@+id/guideline97"
        tools:layout_editor_absoluteY="74dp" />-->

    <TextView

        android:id="@+id/EAmountSplit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textColor="@color/fill1"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintEnd_toStartOf="@+id/guideline98"
        app:layout_constraintStart_toStartOf="@+id/guideline97"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:layout_marginTop="@dimen/_8sdp"
        tools:layout_editor_absoluteY="100dp">



    </View>





    <TextView
        android:id="@+id/directionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textColor="@color/fill1"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toStartOf="@+id/dayN"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="@id/guideline97"
        app:layout_constraintTop_toBottomOf="@+id/view"></TextView>

    <TextView
        android:id="@+id/dayN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day1"
        android:textColor="@color/White"
        android:textSize="@dimen/_10sdp"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toStartOf="@+id/guideline98"
        android:background="@color/orange"
        android:clickable="false"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/view"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/_8sdp"
        android:textColor="@color/fill1"
        android:layout_marginTop="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toStartOf="@id/guideline97"/>


</androidx.constraintlayout.widget.ConstraintLayout>