<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline78"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/icon"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bac_for_icon"
            android:layout_weight="2" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/fill1"
            android:textSize="@dimen/_11sdp"
            android:id="@+id/fullhrs"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/dividedhrs"
            android:layout_width="0dp"
            android:textSize="@dimen/_11sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/fill1"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"/>
        <ImageView
            android:id="@+id/mondayarrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrowbb"
            android:layout_weight="2"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>